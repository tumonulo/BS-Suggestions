<section id="form" class="bg-gray-50 text-gray-900 py-16">
  <div class="max-w-2xl mx-auto px-6">
    <h3 class="text-3xl font-bold mb-6">Send Your Suggestion</h3>
    <form class="space-y-4 bg-white p-6 rounded-xl shadow-md">
      <div>
        <label class="block font-semibold mb-1" for="title">Title</label>
        <input id="title" type="text" placeholder="Enter your suggestion title" class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-yellow-500" />
      </div>
      <div>
        <label class="block font-semibold mb-1" for="description">Description</label>
        <textarea id="description" placeholder="Describe your idea in detail" class="w-full p-3 border border-gray-300 rounded h-32 focus:outline-none focus:ring-2 focus:ring-yellow-500"></textarea>
      </div>
      <button type="submit" class="bg-yellow-500 text-gray-900 font-bold px-6 py-3 rounded hover:bg-yellow-600">
        Submit Suggestion
      </button>
    </form>
  </div>
</section>